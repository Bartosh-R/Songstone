<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="SampleTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/flush_orange</item>

        <item name="alertDialogTheme">@style/SampleAlertDialogTheme</item>

        <!-- These are important. Handled by toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SampleAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/flush_orange</item>
    </style>

</resources>
